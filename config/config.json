{
  "name": "AuthKit Demo",
  "jwtConfig": {
    "issuer": "AuthKit Demo",
    "secret": "supersecret",
    "expiresIn": "1h",
    "algorithm": "HMAC-SHA-256",
    "jwtStorageLocation": "cookie",
    "cookieName": "authkit_token",
    "cookieOptions": {
      "httpOnly": true,
      "secure": false,
      "sameSite": "Lax",
      "maxAge": 3600,
      "path": "/"
    }
  },
  "passwordHashAlgorithm": "SHA-512",
  "passwordSaltLength": 32,
  "databaseConfig": {
    "type": "postgres",
    "url": "postgres://authkit:password@localhost:5432/authkit",
    "username": "authkit",
    "secret": "password",
    "database": "authkit"
  },
  "autoCreateSchema": false
}