{
  "name": "AuthKit Demo",
  "jwtConfig": {
    "issuer": "AuthKit Demo",
    "secret": "supersecret",
    "expiresIn": "1h",
    "algorithm": "HS256",
    "jwtStorageLocation": "cookie",
    "cookieName": "authkit_token",
    "cookieOptions": {
      "httpOnly": true,
      "secure": false,
      "sameSite": "Lax",
      "maxAge": 3600,
      "path": "/"
    },
    "refreshExpiresIn": "7d",
    "refreshCookieName": "authkit_refresh",
    "refreshCookieOptions": {
      "httpOnly": true,
      "secure": false,
      "sameSite": "Lax",
      "maxAge": 604800,
      "path": "/"
    }
  },
  "passwordHashAlgorithm": "SHA-512",
  "passwordSaltLength": 32,
  "enforceVerifiedEmail": false,
  "databaseConfig": {
    "type": "mysql",
    "url": "db",
    "port": 3306,
    "username": "authkit",
    "secret": "password",
    "database": "AuthKit"
  },
  "autoCreateSchema": true
}